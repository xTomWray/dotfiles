{{ if .is_wsl -}}
#!/bin/bash
set -euo pipefail

# starship.toml hash: {{ include "dot_config/starship.toml" | sha256sum }}

WIN_HOME="/mnt/c/Users/{{ .win_user }}"

if [ -d "$WIN_HOME" ]; then
    echo "Syncing Starship config to Windows host..."
    mkdir -p "$WIN_HOME/.config"
    cp "$HOME/.config/starship.toml" "$WIN_HOME/.config/starship.toml"
    echo "Synced to $WIN_HOME/.config/starship.toml"
fi
{{ end -}}
