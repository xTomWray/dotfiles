# ~/.zshrc - managed by chezmoi

# ----- Zinit -----
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
[ ! -d "$ZINIT_HOME" ] && mkdir -p "$(dirname $ZINIT_HOME)"
[ ! -d "$ZINIT_HOME/.git" ] && git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
source "${ZINIT_HOME}/zinit.zsh"

# Plugins
zinit light zsh-users/zsh-autosuggestions
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-syntax-highlighting

# Load completions
autoload -Uz compinit && compinit
zinit cdreplay -q

# ----- History -----
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history
setopt appendhistory
setopt sharehistory
setopt hist_ignore_all_dups
setopt hist_ignore_space

# ----- Tools -----

# fzf
[ -f /usr/share/doc/fzf/examples/key-bindings.zsh ] && source /usr/share/doc/fzf/examples/key-bindings.zsh
[ -f /usr/share/doc/fzf/examples/completion.zsh ] && source /usr/share/doc/fzf/examples/completion.zsh

# Tab accepts autosuggestion if visible, otherwise does fzf/normal completion
# Must be after fzf sources since fzf rebinds ^I
_tab_accept_or_complete() {
    if (( $#POSTDISPLAY )); then
        zle autosuggest-accept
    else
        zle fzf-completion
    fi
}
zle -N _tab_accept_or_complete
bindkey '^I' _tab_accept_or_complete
# zoxide (cd replacement)
command -v zoxide >/dev/null 2>&1 && eval "$(zoxide init zsh)"

# direnv
command -v direnv >/dev/null 2>&1 && eval "$(direnv hook zsh)"

# mise (runtime version manager)
command -v mise >/dev/null 2>&1 && eval "$(mise activate zsh)"

# starship prompt (must be last)
command -v starship >/dev/null 2>&1 && eval "$(starship init zsh)"

# ----- Aliases -----
alias cup='chezmoi update --apply'
alias ll='ls -lah'
alias sync-wezterm='cp ~/.wezterm.lua /mnt/c/Users/postgres/.wezterm.lua && echo "Synced .wezterm.lua to Windows"'
# WezTerm (Windows) helper from WSL
alias wezterm-win='/mnt/c/Program\ Files/WezTerm/wezterm.exe'

# ----- PATH -----
export PATH="$HOME/.local/bin:$PATH"
